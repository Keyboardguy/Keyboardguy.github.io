html {
  box-sizing: border-box;
  font-family: helvetica, sans-serif;
}

*, *:before, *:after {
  box-sizing: inherit;
}

canvas {
	border: 1px solid black;
}

form {
	display: block;
}

.force-section {
	display: flex;
	margin-bottom: 10px;
	min-height: 250px;
}

input {
  appearance: none;
  font-family: inherit;
  font-size: 100%;
  margin: 0;
  box-sizing: border-box;
  padding: 5px;
  border: 1px solid black;
}

input:invalid {
	border: 1px solid red;
}

input[type="checkbox"] {
	transition: 0.2s all;
}

input[type="checkbox"]:checked::before {
	content: "âœ“";
	position: absolute;
	top: 0;
	left: 0;
}


button[type="submit"] {
	padding: 3px;
	width: 100px;
	height: 30px;
}

